{
  "name": "mutex",
  "version": "1.0.0",
  "private": true,
  "description": "Advisory lock service for CI workflows",
  "main": "lib/main.js",
  "scripts": {
    "clean": "rm -rf lib dist",
    "lint": "prettier --ignore-unknown --write '**/*.{ts,js,json,md,yml,yaml}'",
    "build:watch": "tsc --watch",
    "build": "tsc && npm run package",
    "package": "ncc build lib/main.js -o dist/main && ncc build lib/post.js -o dist/post",
    "test": "jest",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@slack/web-api": "^7.10.0",
    "@types/pg": "^8.15.5",
    "pg": "^8.16.3",
    "pg-format": "^1.0.4",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.9",
    "@types/pg-format": "^1.0.5",
    "@vercel/ncc": "^0.38.1",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.5",
    "typescript": "^5.9.2"
  }
}
